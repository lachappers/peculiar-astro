---
import { CONTENTSETTINGS } from "@config";
import { formatDate } from "@utils/dateFormat";
import { humanize, plainify, slugify } from "@utils/textConverter";
import { Icon } from "astro-icon/components";
import Button from "@components/Button.astro";
// import { FaRegFolder, FaRegUserCircle } from "react-icons/fa";
import PublicImage from "@components/shared/PublicImage.astro";

const { data } = Astro.props;
const { title, image, date, author, categories, preview } = data.data;
---

<div
  class="flex h-full w-full flex-col items-center text-center sm:items-start sm:text-left"
>
  {
    image && (
      <PublicImage
        class="mb-6 max-h-36 w-full rounded object-cover"
        src={image}
        alt={title}
        width={445}
        height={230}
        format="webp"
      />
    )
  }
  <h4 class="mb-3 w-full text-2xl">
    <a class="title-link" href={`/blog/${data.slug}`}>
      {title}
    </a>
  </h4>
  <ul
    class="mb-2 flex w-full flex-col flex-wrap items-center justify-center gap-2 whitespace-nowrap sm:flex-row sm:justify-start"
  >
    {
      categories && (
        <li class="mr-4 inline-block w-full">
          <Icon name="mdi:folder-outline" class="-mt-1 mr-2 inline-block" />
          {categories.map((category: string, index: number) => (
            <a class="title-link" href={`/categories/${slugify(category)}`}>
              {humanize(category)}
              {index !== categories.length - 1 && "|"}
            </a>
          ))}
        </li>
      )
    }
    <li class="flex flex-auto gap-2 sm:w-1/3">
      <a
        class="title-link inline-flex items-center justify-center gap-2"
        href={`/authors/${slugify(author)}`}
      >
        <Icon name="mdi:account-circle-outline" class="block" />
        {humanize(author)}
      </a>
    </li>
    {
      date && (
        <li class="flex flex-auto items-center gap-2 sm:w-1/3">
          <Icon name="mdi:clock-outline" class="block " />
          {formatDate(date)}
        </li>
      )
    }
  </ul>
  <p class="mb-6 overflow-hidden text-ellipsis">
    {
      preview
        ? preview
        : plainify(data.body?.slice(0, Number(CONTENTSETTINGS.previewLength)))
    }
    <!-- {plainify(data.body?.slice(0, Number(CONTENTSETTINGS.previewLength)))} -->
  </p>
  <Button
    href={`/blog/${data.slug}`}
    text="Read More"
    icon="mdi:arrow-right"
    addClasses="size-small last:mt-auto w-fit"
  />
</div>
