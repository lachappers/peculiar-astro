---
import { Image } from "astro:assets";
const { img, purple, point, subtext } = Astro.props;
---

<div class="animate flex flex-col items-center text-center">
  {img && <Image src={img} alt="" width="128" class="" />}
  <p class="text-2xl font-bold text-[--action-color] md:text-2xl">{purple}</p>
  <p class="text-lg font-semibold md:text-xl">{point}</p>
  <p class="max-w-[45ch] text-base md:text-lg">{subtext}</p>
</div>

<style lang="scss">
  div > p:first-child {
    color: var(--action-color);
  }
</style>
