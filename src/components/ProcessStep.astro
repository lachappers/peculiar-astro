---
import { Icon } from "astro-icon";

const { icon = "mdi:rocket", title = "Title" } = Astro.props;
---

<div class="step mb-6 sm:mb-0">
  <div class="flex-auto items-center" aria-hidden="true">
    <div
      class="z-10 flex shrink-0 items-center justify-center dark:bg-blue-900 dark:ring-gray-900"
      aria-hidden="true"
    >
      <Icon name={icon} aria-hidden="true" />
    </div>
    <div class="hidden h-0.5 w-full bg-slate-100 dark:bg-white sm:flex"></div>
  </div>

  <div class="mt-3 sm:pr-8">
    <h3 class="mb-2">{title}</h3>
    <p>
      <slot
        >Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic, corporis.</slot
      >
    </p>
  </div>
</div>

<style lang="scss">
  @use "../assets/scss/base/breakpoint" as *;

  .step {
    flex: auto;
    position: relative;
    padding: 1rem;
    width: 20rem;
    max-width: 20rem;
    background-color: var(--neutral-background);

    border: 3px solid var(--dark-100);
    // box-shadow: 0.0625rem 0.0625rem 0 var(--secondary-100),
    //   0.5rem 0.5rem 0 var(--dark-100);
    border-radius: 0.5rem;

    :first-child :first-child {
      padding: 0.25rem;
      background-color: var(--secondary-100);
      height: 4rem;
      width: 4rem;
      border-radius: 9999px;
      //   box-shadow: inset 0 0 0 calc(0px + 6px) var(--primary-300);
    }
    > * {
      //   position: relative;
      //   z-index: 2;
    }

    @include breakpoint(large) {
      //   width: 100%;
    }
  }
  .step:first-child {
  }

  :global(.step [astro-icon]) {
    width: 3rem;
    height: 3rem;
    color: var(--secondary-300);

    // stop-color: var(--secondary-100);
    // fill: url(#icon-gradient) var(--action-color);
    // fill: linear-gradient(315deg, var(--primary-200) 25%, var(--secondary-400));
  }

  :global(.darkmode .feature) {
    background-color: var(--dark-100);
    border: 3px solid var(--neutral-300);
    // box-shadow: 0.0625rem 0.0625rem 0 var(--dark-100),
    //   0.5rem 0.5rem 0 var(--secondary-100);
    border-radius: 0.5rem;
  }
</style>
