---
import { Icon } from "astro-icon/components";

const {
  icon = "mdi:rocket",
  title = "Title",
  featureColor = "neutral",
  href = null,
  contentClasses = "",
  featureWidth,
} = Astro.props;
---

{
  !href ? (
    <div
      class={`feature flex flex-col gap-1 p-2 sm:gap-3 sm:p-4 ${featureWidth} ${featureColor}`}
    >
      <div class={`flex flex-col sm:gap-2 ${contentClasses}`}>
        <Icon name={icon} class="text-4xl" />
        <h3 class="text-base sm:text-lg">{title}</h3>
      </div>

      <div
        class={`content max-w-[60ch] text-sm sm:text-base ${contentClasses}`}
      >
        <slot />
      </div>
    </div>
  ) : (
    <a {href} class={`featureLink flex  ${featureWidth}`}>
      <div
        class={`feature flex flex-col gap-1 p-2 sm:gap-3 sm:p-4 ${featureColor}`}
      >
        <div class={`flex flex-col gap-2 ${contentClasses}`}>
          <Icon name={icon} class="text-4xl" />
          <h3>{title}</h3>
        </div>
        <div class={`content max-w-[60ch] ${contentClasses}`}>
          <slot />
        </div>
      </div>
    </a>
  )
}

