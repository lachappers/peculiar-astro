---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import Hero from "../components/Hero.astro";
import Heading from "../components/Heading.astro";
import Button from "../components/Button.astro";
import CallOut from "../components/CallOut.astro";
import Feature from "../components/Feature.astro";
import { Icon } from "astro-icon";
---

<DefaultLayout title="Pricing">
  <Hero
    title="Tech Essentials from"
    gradientText="£1,000 upfront"
    learnTarget={`#pricing`}
    quoteButton={true}
    learnButton={true}
    imgSrc="/hero-vector.png"
  />
  <section class="my-64">
    <div class="container flex flex-col">
      <h2 class="mb-2 text-lg font-bold">
        <Heading id="pricing" text="HOW IT WORKS" />
      </h2>
      <p class="mb-16 text-6xl font-bold">
        Keeping it
        <span class="text-highlight">simple</span>.
      </p>
      <!-- <p class="mb-8 text-2xl">
        Make the technology and systems that your business relies on:
      </p> -->
      <p class="mb-8 text-2xl">
        We use our intelligent digital tools to quickly shape, reconfigure and
        build the right technology for you, at the right price, on your
        schedule.
      </p>
      <div class="container">
        <p class="mb-8 text-2xl">It's as easy as...</p>

        <div class="mb-8 grid grid-cols-1 gap-12 md:grid-cols-3">
          <CallOut
            purple="1"
            point="Quote"
            subtext="Build a detailed custom quote with our interactive tool."
          />
          <CallOut
            purple="2"
            point="Design"
            subtext="Using our intelligent design tool and a 2hr design session."
          />
          <CallOut
            purple="3"
            point="Relax"
            subtext="...whilst we build, test and look after your tech!"
          />
        </div>
      </div>
    </div>
    <div class="mt-16 flex flex-col justify-center gap-3 min-[500px]:flex-row">
      <Button href="/" icon="ph:chat" text="Get a Quote" />
      <Button href="/" text="About Us" buttonColor="color-secondary" />
    </div>
  </section>
  <section class="peach my-64 py-8">
    <div class="container flex flex-col items-center py-8">
      <h2 class="mb-2 w-full text-lg font-bold">
        <Heading
          id="included"
          text="Get your tech up and running, or up to scratch"
        />
      </h2>
      <p class="mb-16 w-full text-6xl font-bold">
        <span class="text-highlight">Always included</span>, as standard:
      </p>
      <div
        class="grid max-w-screen-lg grid-cols-2 gap-4 sm:grid-cols-3 md:gap-8 lg:grid-cols-4"
      >
        <Feature
          icon="carbon:screen"
          title="Website & Content"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Design or migration, build & optimisation.
        </Feature>
        <Feature
          icon="ion:mail-outline"
          title="Custom Email"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Professional email matching your domain.
        </Feature>
        <Feature
          icon="carbon:tool-kit"
          title="Productivity Tools"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Google Workspace and products.
        </Feature>
        <Feature
          icon="ph:broadcast"
          title="Reputation & Reviews"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Search engine & review site registration.
        </Feature>
        <Feature
          icon="carbon:chat"
          title="Customer Contact"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Setup or config of CRM & website.
        </Feature>
        <Feature
          icon="ep:data-line"
          title="Data & Insights"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Google Analytics to track performance.
        </Feature>
        <Feature
          icon="ph:cookie"
          title="Legal & GDPR"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Compliant website policies & content.
        </Feature>
        <Feature
          icon="ph:lock-light"
          title="Security Basics"
          featureColor=""
          contentClasses="text-center items-center"
        >
          Secure hosting, domain & data setup.
        </Feature>
      </div>
      <div class="my-8 flex w-full items-center gap-4">
        <div class="flex-auto border-b-2 border-solid border-indigo-600"></div>
        <p>PLUS</p>
        <div class="flex-auto border-b-2 border-solid border-indigo-600"></div>
      </div>
      <ul class="grid grid-cols-2 content-center gap-8 text-sm md:grid-cols-3">
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>

          Custom coded, accessible 5-page site
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          SEO optimisation
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>

          Domain registration & management
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>

          Migration of existing content
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Secure site & email hosting
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Anti-spam contact form
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          https and SSL certificates
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Performance scanning & updates
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Content licensing & management
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Mobile & desktop compatibility
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Backups & security updates
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Configured with your branding
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Google search console registration
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Mobile & desktop compatibility
        </li>
        <li class="flex h-6 items-center gap-2">
          <div class="h-6 w-6 flex-none">
            <Icon name="charm:tick" />
          </div>
          Comprehensive, custom add-ons as required
        </li>
      </ul>
    </div>
    <div class="mt-16 flex flex-col justify-center gap-3 min-[500px]:flex-row">
      <Button href="/" icon="ph:chat" text="Get a Quote" />
      <Button href="/" text="About Us" buttonColor="color-secondary" />
    </div>
  </section>

  <section class="my-64 py-8">
    <div class="container flex flex-col items-center py-8">
      <h2 class="mb-2 w-full text-lg font-bold">
        <Heading id="example" text="Example pricing" />
      </h2>
      <p class="mb-16 w-full text-6xl font-bold">
        <span class="text-highlight">Transparent</span>, customisable products,
        services & pricing
      </p>
      <div class="flex justify-between p-4">
        <div class="">Some words</div>
        <div class="example peach max-w-md items-center gap-2 p-4">
          <div class="toggle relative flex w-full justify-between px-4 py-8">
            <p class="w-1/5 font-semibold">PAY MONTHLY</p>
            <input
              type="checkbox"
              id="exampleToggle"
              class="relative h-10 w-[4.5rem] cursor-pointer appearance-none rounded-full border border-2 border-black bg-gray-100 ring-1 ring-black ring-offset-white transition-colors duration-200 ease-in-out before:inline-block before:h-9 before:w-9 before:translate-x-0 before:transform before:rounded-full before:bg-white before:shadow before:ring-2 before:ring-black before:transition before:duration-200 before:ease-in-out checked:bg-blue-600 checked:bg-none checked:before:translate-x-full checked:before:bg-blue-200 focus:border-blue-600 focus:outline-none focus:ring-blue-600 dark:bg-gray-700 dark:before:bg-gray-400 dark:checked:bg-blue-600 dark:checked:before:bg-blue-200 dark:focus:ring-offset-gray-800"
            />
            <label for="exampleToggle" class="sr-only"
              >toggle cost by payment term</label
            >
            <p class="w-1/5 text-right font-semibold">PAY UPFRONT</p>
            <span
              class="absolute bottom-2 right-2 rounded-full border-2 border-black bg-blue-800 px-1 text-xs font-light text-blue-50"
              >Save 10%</span
            >
          </div>
          <div
            class="grid w-full grid-cols-4 gap-2 rounded-md border-2 border-black p-2"
          >
            <div class="col-span-3 text-lg font-bold">DESIGN & BUILD</div>
            <p class="monthly row-span-2 justify-self-end text-lg font-bold">
              £4,500
            </p>
            <div
              class="upfront relative row-span-2 flex hidden flex-col justify-self-end"
            >
              <p class="text-lg font-light line-through">£4,500</p>
              <p class="text-lg font-bold">£4,150</p>
              <span
                class="absolute bottom-0 w-full rounded-full border-2 border-black bg-blue-800 px-1 text-center text-xs font-light text-blue-50"
                >-10%</span
              >
            </div>
            <p class="col-span-3">
              5 page, hand-coded, brochure site. Hosting, email, productivity &
              web presence tools setup.
            </p>
          </div>
          <div
            class="grid grid-cols-4 gap-2 rounded-md border-2 border-black p-2"
          >
            <div class="col-span-3 text-lg font-bold">
              MANAGE & SUPPORT <span class="text-sm font-light">
                (12 months)</span
              >
            </div>
            <p class="monthly row-span-2 justify-self-end text-lg font-bold">
              £75 <span class="text-sm font-light"> /month</span>
            </p>
            <div
              class="upfront relative row-span-2 flex hidden flex-col items-end justify-self-end"
            >
              <p class="text-lg font-light line-through">£75</p>
              <p class="text-lg font-bold">£67.50</p>
              <p class="text-sm font-light">/month</p>

              <span
                class="absolute bottom-0 w-full rounded-full border-2 border-black bg-blue-800 px-1 text-center text-xs font-light text-blue-50"
                >-10%</span
              >
            </div>
            <p class="col-span-3">
              Core package incl; domain & email hosting, security & performance
              updates, Google Workspace (x1).
            </p>
          </div>
          <div
            class="flex w-full gap-2 border-b-2 border-solid border-black pb-2"
          >
            <p class="flex-none font-semibold">TOTAL</p>
            <span
              class="relative bottom-1 flex-auto border-b-2 border-dotted border-slate-400"
            ></span>
            <p class="flex-none">
              £5,400 <span class="text-xs font-light">ex.VAT</span>
            </p>
          </div>
          <div
            class="neutral flex w-full flex-col items-center rounded-md border-2 border-black p-2"
          >
            <div class="flex w-full gap-2">
              <p class="flex-none text-lg font-semibold">Initial Deposit</p>
              <span
                class="relative bottom-1 flex-auto border-b-2 border-dotted border-slate-400"
              ></span>
              <p class="flex-none text-lg font-semibold">£1,000</p>
            </div>
            <span>+</span>
            <div class="monthly flex flex-col items-center">
              <p class="text-4xl font-bold">
                £366 <span class="text-lg font-semibold">/month</span>
                <span class="text-xs font-light">(ex.VAT)</span>
              </p>
              <p class="text-lg font-semibold">for 12 months</p>
            </div>
            <div class="upfront flex hidden flex-col items-center">
              <p class="text-4xl font-bold">
                £3960
                <span class="text-xs font-light">(ex.VAT)</span>
              </p>
              <p class="text-lg font-semibold">paid after design is agreed</p>
            </div>
          </div>
          <Button href="/" icon="ph:chat" text="Get a Quote" />
        </div>
      </div>
    </div>
  </section>

  <style lang="scss">
    .text-highlight {
      text-decoration: var(--primary-200) wavy underline;
    }
    .mint {
      background-color: var(--accent-mint-100);
      color: var(--dark-100);
    }
    .teal {
      background-color: var(--accent-teal-100);
      color: var(--neutral-100);
    }
    .purple {
      background-color: var(--accent-purple-100);
      color: var(--neutral-100);
    }
    .gold {
      background-color: var(--accent-gold-100);
      color: var(--dark-100);
    }
    .peach {
      background-color: var(--accent-peach-100);
      color: var(--peach-100);
    }
    .peach > .container,
    .example {
      display: flex;
      flex-direction: column;
      justify-content: center;
      border: 3px solid var(--font-color);
      border-radius: 0.5rem;
      background-color: var(--background);
    }
    .example {
      background-color: var(--accent-mint-100);
      color: var(--dark-100);
    }

    svg {
      background-color: var(--accent-mint-100);
      color: var(--dark-100);
      border-radius: 9999px;
    }
  </style>
  <script type="text/javascript">
    const monthlys = document.querySelectorAll(".monthly");
    const upfronts = document.querySelectorAll(".upfront");

    document.getElementById("exampleToggle").addEventListener("change", () => {
      if (document.querySelector("#exampleToggle:checked")) {
        monthlys.forEach((m) => {
          m.classList.add("hidden");
        });
        upfronts.forEach((u) => {
          u.classList.remove("hidden");
        });
      } else {
        monthlys.forEach((m) => {
          m.classList.remove("hidden");
        });
        upfronts.forEach((u) => {
          u.classList.add("hidden");
        });
      }
    });
  </script>
</DefaultLayout>
